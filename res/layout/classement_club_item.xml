<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
              
	<TextView 
		android:id="@+id/classementClubEntryPlace"
		android:padding="10dp"
		android:textSize="14sp"		
	    android:layout_width="40px"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_weight="1" />
    <greendroid.widget.AsyncImageView
        android:id="@+id/classementClubEntryLogo"
	    android:layout_height="20px"
	    android:layout_width="20px"
	    android:gravity="center_horizontal"
        android:layout_weight="1" />	
	<TextView 
		android:id="@+id/classementClubEntryClub"
        android:padding="10dp"
        android:textSize="14sp"        
		android:layout_width="150px"
		android:layout_weight="2"
	    android:layout_height="wrap_content" />
	<TextView 
		android:id="@+id/classementClubEntryPoints"
	    android:padding="10dp"
	    android:textSize="12sp"
	    android:layout_width="40px"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"    
	    android:gravity="right"	/>
	<TextView 
		android:id="@+id/classementClubEntryJoue"
	    android:padding="10dp"
	    android:textSize="12sp"
	    android:layout_width="40px"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"    
	    android:gravity="right"	/>
	<TextView 
		android:id="@+id/classementClubEntryDiff"
	    android:padding="10dp"
	    android:textSize="12sp"
	    android:layout_width="40px"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"    
	    android:gravity="right"	/>
	
</LinearLayout>