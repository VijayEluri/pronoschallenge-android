<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:orientation="vertical"		    
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content">
    
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			        android:orientation="vertical"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_weight="1">
			<greendroid.widget.AsyncImageView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchLogoDom"
					    android:layout_height="100px"
					    android:layout_width="100px"
					    android:scaleType="fitXY"
					    android:layout_gravity="center_horizontal"/>
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchEquipeDom"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center_horizontal"
					    android:textSize="16px"/>
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchPlaceDom"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center_horizontal"
					    android:textSize="16px"/>
		</LinearLayout>

    	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			      android:orientation="vertical"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_weight="1">
			<greendroid.widget.AsyncImageView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchLogoExt"
					    android:layout_height="100px"
					    android:layout_width="100px"
					    android:scaleType="fitXY"
					    android:layout_gravity="center_horizontal"/>
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchEquipeExt"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center_horizontal"
					    android:textSize="16px"/>
			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchPlaceExt"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center_horizontal"
					    android:textSize="16px"/>
		</LinearLayout>
	        	
	</LinearLayout>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:layout_width="fill_parent"
	              android:layout_height="wrap_content"
	              android:orientation="vertical"
	              android:layout_marginTop="10px"
		          android:background="@drawable/back">
	    <TextView
	        	android:id="@+id/statMatchCoteTitre"
	        	android:text="Cote" 
				android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textSize="14px"/>
	    	    
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		              android:layout_width="fill_parent"
		              android:layout_height="wrap_content"
		              android:layout_marginTop="5px" >		    	    
			<greendroid.widget.AsyncImageView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchLogoCoteDom"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"						
					    android:gravity="center"
					    android:layout_weight="1"/>
			<greendroid.widget.AsyncImageView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchLogoCoteNul"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"						
					    android:gravity="center"
					    android:layout_weight="1"/>
			<greendroid.widget.AsyncImageView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/statMatchLogoCoteExt"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
					    android:gravity="center"
					    android:layout_weight="1"/>						
		</LinearLayout>	    	    
	    
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		              android:layout_width="fill_parent"
		              android:layout_height="wrap_content">		    	    
				<TextView xmlns:android="http://schemas.android.com/apk/res/android"
							android:id="@+id/statMatchCoteDom"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:textSize="16px"
						    android:layout_weight="1"/>
				<TextView xmlns:android="http://schemas.android.com/apk/res/android"
							android:id="@+id/statMatchCoteNul"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:textSize="16px"
						    android:layout_weight="1"/>
				<TextView xmlns:android="http://schemas.android.com/apk/res/android"
							android:id="@+id/statMatchCoteExt"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:gravity="center"
						    android:textSize="16px"
						    android:layout_weight="1"/>
		</LinearLayout>
			        	
	</LinearLayout>

	    	    
    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginTop="10px" >	        
	    <TextView
	        	android:text="Derniers matchs" 
				android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
		        android:gravity="center"
		        android:textSize="14px"/>        
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		              android:layout_width="fill_parent"
		              android:layout_height="fill_parent">
	    
		    <ListView android:id="@+id/statMatchSerieListDom" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"/>
		    <ListView android:id="@+id/statMatchSerieListExt" 
					android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"/>
		 </LinearLayout>
		 
		    <TextView android:id="@+id/statMatchSerieMessage"
				android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
		        android:gravity="center"
		        android:textSize="20px"
		        android:visibility="gone"/>
		    
	</LinearLayout>

</LinearLayout>
